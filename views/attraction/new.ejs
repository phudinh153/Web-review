<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Destination</h1>
    <div class="col-6 offset-3">
        <form action="/attraction" method="post" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" name="area[title]" id="title" placeholder="Ex: Fire Beach" required>
                <div class="valid-feedback">
                    Pass!
                </div>
            </div>
            
            <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" class="form-control" name="area[location]" id="location" placeholder="Ex: Brooklyn, New York" required>
                <div class="valid-feedback">
                    Passed!
                </div>
            </div>
            
            <input type="file" name="area[images]" id="image" multiple>
            
            <div class="mb-3">
                <label for="price" class="form-label">Destination Price</label>
                <div class="input-group">
                <span class="input-group-text" id="price-label">$</span>
                <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="area[price]" required>
                <div class="valid-feedback">
                    Passed!
                </div>
            </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea type="text" class="form-control" name="area[description]" id="description" required></textarea>
                <div class="valid-feedback">
                    Passed!
                </div>   
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add</button>
            </div>
            
        
            </form>
            <a href="/attraction">All Destinations</a>
    </div>
</div>


